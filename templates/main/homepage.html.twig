{% extends 'base.html.twig' %}
{% block title %}Starshop. Beam up some parts! {% endblock %}
{% block body %}
<h1><strong>Starshop</strong>: your monopoly-busting option for Starship parts!</h1>

<div>
    Browse through {{ numberOfStarships }} starships!
    {% if numberOfStarships > 400 %}
        {# Comments here #}
        <p>That's a lot of starships!</p>
    {% endif %}
</div>

<div>
    <h2>My Ship</h2>
    <table>
        <tr>
            <th>Ship</th>
            <td>
                {{ myShip.name }}
            </td>
        </tr>
        <tr>
            <th>Captain</th>
            <td>
                {{ myShip.class }}
            </td>
        </tr>
        <tr>
            <th>Captain</th>
            <td>
                {{ myShip.captain|upper|lower|title }}
            </td>
        </tr>
        <tr>
            <th>Status</th>
            <td>
                {{ myShip.status }}
            </td>
        </tr>
    </table>
</div>
{% endblock %}